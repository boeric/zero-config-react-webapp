{
  "root": true,
  "parser": "babel-eslint",
  "rules": {
    "import/extensions": ["error", "ignorePackages", {
      "js": "never",
      "jsx": "never"
    }]
  },
  "env": {
    "es6": true,
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "extends": [
    "airbnb-base",
    "plugin:react/recommended",
    "plugin:import/react"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "settings": {
      "import/resolver": {
        "node": {
          "extensions": [".js",".jsx"]
        }
      }
  }
}
